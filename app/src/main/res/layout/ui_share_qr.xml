<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center">
            <TextView
                android:id="@+id/tv_app_share"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:gravity="center"
                android:text="让身边的好友扫一扫便可下载"
                android:layout_below="@+id/im_app_share_qr"
                android:layout_alignParentStart="true"
                android:textSize="12sp"
                android:textColor="#80888888"
                android:layout_marginTop="10dp" />

            <LinearLayout
                android:layout_width="260dp"
                android:layout_height="260dp"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:orientation="vertical"
                android:layout_marginTop="10dp"
                android:gravity="center_horizontal">

                <ImageView
                    android:id="@+id/im_app_share_qr"
                    android:layout_width="220dp"
                    android:layout_height="220dp"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/ic_user_app_qr" />

                <TextView
                    android:id="@+id/tv_app_share_desc"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:gravity="center"
                    android:text="用户版"
                    android:layout_below="@+id/im_app_share_qr"
                    android:layout_alignParentStart="true"
                    android:textSize="14sp"
                    android:textColor="#a0888888"
                    android:layout_marginTop="1dp" />

            </LinearLayout>



            <LinearLayout
                android:layout_width="260dp"
                android:layout_height="260dp"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:orientation="vertical"
                android:layout_marginTop="10dp"
                android:gravity="center_horizontal">

                <ImageView
                    android:id="@+id/im_app_share_qr_engineer"
                    android:layout_width="220dp"
                    android:layout_height="220dp"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/ic_engineer_app_qr" />

                <TextView
                    android:id="@+id/tv_app_share_desc_engineer"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_alignParentStart="true"
                    android:layout_below="@+id/im_app_share_qr"
                    android:layout_marginTop="1dp"
                    android:gravity="center"
                    android:text="工程师版"
                    android:textColor="#a0888888"
                    android:textSize="14sp" />

            </LinearLayout>

        </LinearLayout>



    </ScrollView>




</RelativeLayout>