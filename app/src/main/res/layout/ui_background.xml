<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <com.yy.sorter.view.PageSwitchView
        android:id="@+id/pageSwitchView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="none"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/tv_layer"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:textColor="@color/buttonNormal"
                    android:paddingLeft="10dp"
                    android:gravity="center|left"
                    android:textSize="@dimen/statusFontSize"
                    android:layout_marginBottom="1dp"
                    android:text="层"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/wave_height"
                    android:background="@color/background"
                    >
                    <com.yy.sorter.view.ThWaveView

                        android:id="@+id/thwaveView"
                        android:layout_below="@+id/linearLayout3"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="#ffffff"/>
                </LinearLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:paddingRight="10dp"
                    android:paddingLeft="10dp"
                    android:background="@color/background">
                    <TextView
                        android:id="@+id/tv_chute"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:layout_marginRight="10dp"
                        android:textColor="@color/fontColor"
                        android:layout_alignParentLeft="true"
                        android:text="料槽"/>
                    <com.yy.sorter.view.KeyboardDigitalEdit
                        android:layout_width="60dp"
                        android:layout_height="40dp"
                        android:inputType="textPersonName"
                        android:text="1"
                        android:layout_centerVertical="true"
                        android:id="@+id/et_chute1"
                        android:textColor="@color/fontColor"
                        android:background="@drawable/selector_edit_bk"
                        android:textAlignment="center"
                        android:layout_toRightOf="@+id/tv_chute"
                        android:focusable="false"
                        android:focusableInTouchMode="false" />


                    <Button
                        android:id="@+id/button_digital_gain"
                        android:layout_width="100dp"
                        android:layout_height="40dp"
                        android:layout_centerHorizontal="true"
                        android:background="@drawable/th_button_selector"
                        android:text="数字增益"
                        android:layout_centerVertical="true"
                        android:textAllCaps="false"
                        android:textColor="@drawable/selector_btn_click_text_color"
                        android:visibility="visible" />

                    <CheckBox
                        android:id="@+id/ck_adjust_all"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:textColor="@color/fontColor"
                        android:text="整体调整"
                        android:layout_centerVertical="true"
                        style="@style/CustomCheckBoxStyle"
                        android:layout_alignParentEnd="true"
                        android:paddingRight="0dp" />

                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="10dp"
                    android:background="@color/background">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="35dp">
                        <TextView
                            android:layout_width="80dp"
                            android:layout_height="40dp"
                            android:visibility="invisible"
                            android:gravity="center"
                            android:background="@drawable/th_button_selector"
                            android:textColor="@drawable/selector_btn_click_text_color"
                            android:layout_marginRight="10dp"
                            android:text="前视"/>
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="30dp"
                            android:layout_weight="1"
                            android:layout_marginRight="3dp"
                            android:gravity="center"
                            android:textColor="#f00"
                            android:text="R"
                            />
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="30dp"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:textColor="#0f0"
                            android:layout_marginRight="3dp"
                            android:text="G"
                            />
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="30dp"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:layout_marginRight="3dp"
                            android:textColor="#00f"
                            android:text="B"
                            />
                        <TextView
                            android:id="@+id/tv_ir1"
                            android:layout_width="0dp"
                            android:layout_height="30dp"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:layout_marginRight="3dp"
                            android:textColor="#454545"
                            android:text="IR1"
                            />

                        <TextView
                            android:id="@+id/tv_ir2"
                            android:layout_width="0dp"
                            android:layout_height="30dp"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:textColor="#B23AEE"
                            android:text="IR2"
                            />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:paddingLeft="2dp"
                        >

                        <Button
                            android:id="@+id/button_front_led"
                            android:layout_width="80dp"
                            android:layout_height="40dp"
                            android:layout_marginRight="10dp"
                            android:background="@drawable/th_button_selector"
                            android:gravity="center"
                            android:text="背景灯"
                            android:textAllCaps="false"
                            android:textColor="@drawable/selector_btn_click_text_color" />
                        <com.yy.sorter.view.KeyboardDigitalEdit
                            android:id="@+id/et_front_led_r"
                            android:layout_width="0dp"
                            android:layout_height="40dp"
                            android:layout_weight="1"

                            android:layout_marginRight="3dp"
                            android:inputType="number"
                            android:ems="10"
                            android:textColor="@color/fontColor"
                            android:textAlignment="center"
                            android:focusable="false"
                            android:focusableInTouchMode="false"
                            android:text="0"
                            android:background="@drawable/selector_edit_bk"/>
                        <com.yy.sorter.view.KeyboardDigitalEdit
                            android:id="@+id/et_front_led_g"
                            android:layout_width="0dp"
                            android:layout_height="40dp"
                            android:layout_weight="1"
                            android:layout_marginRight="3dp"
                            android:inputType="number"
                            android:ems="10"
                            android:textColor="@color/fontColor"
                            android:textAlignment="center"
                            android:focusable="false"
                            android:focusableInTouchMode="false"
                            android:text="0"
                            android:background="@drawable/selector_edit_bk"/>
                        <com.yy.sorter.view.KeyboardDigitalEdit
                            android:id="@+id/et_front_led_b"
                            android:layout_width="0dp"
                            android:layout_height="40dp"
                            android:layout_weight="1"
                            android:layout_marginRight="3dp"
                            android:inputType="number"
                            android:ems="10"
                            android:textColor="@color/fontColor"
                            android:textAlignment="center"
                            android:focusable="false"
                            android:focusableInTouchMode="false"
                            android:text="0"
                            android:background="@drawable/selector_edit_bk"/>
                        <com.yy.sorter.view.KeyboardDigitalEdit
                            android:id="@+id/et_front_led_ir1"
                            android:layout_width="0dp"
                            android:layout_height="40dp"
                            android:layout_weight="1"
                            android:layout_marginRight="3dp"
                            android:inputType="number"
                            android:ems="10"
                            android:textColor="@color/fontColor"
                            android:textAlignment="center"
                            android:focusable="false"
                            android:focusableInTouchMode="false"
                            android:text="0"
                            android:background="@drawable/selector_edit_bk"/>
                        <com.yy.sorter.view.KeyboardDigitalEdit
                            android:id="@+id/et_front_led_ir2"
                            android:layout_width="0dp"
                            android:layout_height="40dp"
                            android:layout_weight="1"
                            android:inputType="number"
                            android:ems="10"
                            android:textColor="@color/fontColor"
                            android:textAlignment="center"
                            android:focusable="false"
                            android:focusableInTouchMode="false"
                            android:text="0"
                            android:background="@drawable/selector_edit_bk"/>
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/layout_background_rear"
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:paddingLeft="2dp"
                        >

                        <Button
                            android:id="@+id/button_rear_led"
                            android:layout_width="80dp"
                            android:layout_height="40dp"
                            android:layout_marginRight="10dp"
                            android:background="@drawable/th_button_selector"
                            android:gravity="center"
                            android:text="增益"
                            android:textAllCaps="false"
                            android:textColor="@drawable/selector_btn_click_text_color" />
                        <com.yy.sorter.view.KeyboardDigitalEdit
                            android:id="@+id/et_rear_led_r"
                            android:layout_width="0dp"
                            android:layout_height="40dp"
                            android:layout_weight="1"
                            android:layout_marginRight="3dp"
                            android:inputType="number"
                            android:ems="10"
                            android:textColor="@color/fontColor"
                            android:textAlignment="center"
                            android:focusable="false"
                            android:focusableInTouchMode="false"
                            android:text="0"
                            android:background="@drawable/selector_edit_bk"/>
                        <com.yy.sorter.view.KeyboardDigitalEdit
                            android:id="@+id/et_rear_led_g"
                            android:layout_width="0dp"
                            android:layout_height="40dp"
                            android:layout_weight="1"
                            android:layout_marginRight="3dp"
                            android:inputType="number"
                            android:ems="10"
                            android:textColor="@color/fontColor"
                            android:textAlignment="center"
                            android:focusable="false"
                            android:focusableInTouchMode="false"
                            android:text="0"
                            android:background="@drawable/selector_edit_bk"/>
                        <com.yy.sorter.view.KeyboardDigitalEdit
                            android:id="@+id/et_rear_led_b"
                            android:layout_width="0dp"
                            android:layout_height="40dp"
                            android:layout_weight="1"
                            android:layout_marginRight="3dp"
                            android:inputType="number"
                            android:ems="10"
                            android:textColor="@color/fontColor"
                            android:textAlignment="center"
                            android:focusable="false"
                            android:focusableInTouchMode="false"
                            android:text="0"
                            android:background="@drawable/selector_edit_bk"/>
                        <com.yy.sorter.view.KeyboardDigitalEdit
                            android:id="@+id/et_rear_led_ir1"
                            android:layout_width="0dp"
                            android:layout_height="40dp"
                            android:layout_weight="1"
                            android:layout_marginRight="3dp"
                            android:inputType="number"
                            android:ems="10"
                            android:textColor="@color/fontColor"
                            android:textAlignment="center"
                            android:focusable="false"
                            android:focusableInTouchMode="false"
                            android:text="0"
                            android:background="@drawable/selector_edit_bk"/>
                        <com.yy.sorter.view.KeyboardDigitalEdit
                            android:id="@+id/et_rear_led_ir2"
                            android:layout_width="0dp"
                            android:layout_height="40dp"
                            android:layout_weight="1"
                            android:inputType="number"
                            android:ems="10"
                            android:textColor="@color/fontColor"
                            android:textAlignment="center"
                            android:focusable="false"
                            android:focusableInTouchMode="false"
                            android:text="0"
                            android:background="@drawable/selector_edit_bk"/>
                    </LinearLayout>

                </LinearLayout>

                <RelativeLayout
                    android:id="@+id/layout_light"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="10dp"
                    android:background="@color/background"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/tv_front_light"
                        android:layout_width="120dp"
                        android:layout_height="40dp"
                        android:layout_marginRight="10dp"
                        android:layout_weight="1"
                        android:gravity="center|left"
                        android:text="主灯"
                        android:paddingLeft="10dp"
                        android:textColor="@color/textColor" />

                    <com.yy.sorter.view.KeyboardDigitalEdit
                        android:id="@+id/et_front_light"
                        android:layout_width="80dp"
                        android:layout_height="40dp"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentTop="true"
                        android:layout_weight="1"
                        android:background="@drawable/selector_edit_bk"
                        android:ems="3"
                        android:focusable="false"
                        android:focusableInTouchMode="false"
                        android:inputType="number"
                        android:text="0"
                        android:textAlignment="center"
                        android:textColor="@color/fontColor" />
                </RelativeLayout>
                <LinearLayout
                    android:id="@+id/layout_ir"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="20dp"
                    android:visibility="gone"
                    android:background="@color/background">
                    <TextView
                        android:id="@+id/tv_title_ir"
                        android:layout_width="match_parent"
                        android:text="红外"
                        android:layout_height="50dp"
                        android:gravity="center"
                        android:textSize="20sp"
                        android:textColor="@color/buttonNormal"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:paddingTop="5dp"
                        android:paddingLeft="10dp"
                        android:id="@+id/layout_ir_light_1"
                        android:paddingRight="10dp"
                        >
                        <Button
                            android:id="@+id/button_ir_front_light"
                            android:layout_width="0dp"
                            android:layout_height="40dp"
                            android:layout_weight="1"
                            android:background="@drawable/th_button_selector"
                            android:textColor="@drawable/selector_btn_click_text_color"
                            android:layout_marginRight="10dp"
                            android:textAllCaps="false"
                            android:text="红外前主灯关"/>

                        <Button
                            android:id="@+id/button_ir_rear_light"
                            android:layout_width="0dp"
                            android:layout_height="40dp"
                            android:layout_weight="1"
                            android:textColor="@drawable/selector_btn_click_text_color"
                            android:background="@drawable/th_button_selector"
                            android:textAllCaps="false"
                            android:text="红外后主灯关"/>
                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="70dp"
                        android:paddingTop="5dp"
                        android:paddingLeft="10dp"
                        android:gravity="center_vertical"
                        android:paddingRight="10dp"
                        android:id="@+id/layout_ir_light_2"
                        >
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1">
                            <TextView
                                android:id="@+id/tv_front_light_ir"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:textColor="@color/fontColor"
                                android:layout_marginRight="10dp"
                                android:gravity="center"
                                android:text="红外前主灯"/>
                            <com.yy.sorter.view.KeyboardDigitalEdit
                                android:id="@+id/et_front_light_ir"
                                android:layout_width="0dp"
                                android:layout_height="40dp"
                                android:layout_weight="1"
                                android:inputType="number"
                                android:ems="3"
                                android:textColor="@color/fontColor"
                                android:textAlignment="center"
                                android:focusable="false"
                                android:focusableInTouchMode="false"
                                android:text="0"
                                android:background="@drawable/selector_edit_bk"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1">
                            <TextView
                                android:id="@+id/tv_rear_light_ir"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:textColor="@color/fontColor"
                                android:layout_marginRight="10dp"
                                android:gravity="center"
                                android:text="红外后主灯"/>
                            <com.yy.sorter.view.KeyboardDigitalEdit
                                android:id="@+id/et_rear_light_ir"
                                android:layout_width="0dp"
                                android:layout_height="40dp"
                                android:layout_weight="1"
                                android:inputType="number"
                                android:ems="3"
                                android:textColor="@color/fontColor"
                                android:textAlignment="center"
                                android:focusable="false"
                                android:focusableInTouchMode="false"
                                android:text="0"
                                android:background="@drawable/selector_edit_bk"/>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

        </ScrollView>

    </com.yy.sorter.view.PageSwitchView>
</LinearLayout>