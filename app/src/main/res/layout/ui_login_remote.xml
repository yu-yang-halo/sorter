<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:focusable="true"
    android:focusableInTouchMode="true"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/remoteLayout"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:layout_marginTop="50dp"
            android:layout_alignParentStart="true"
            android:focusable="true"
            android:focusableInTouchMode="true">


        <Button
            android:text="登录"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/remoteLogin"
            android:textColor="@color/whiteColor"
            android:background="@drawable/button_selector"
            android:textAllCaps="false"
            android:layout_below="@+id/vcodeEdit"
            android:layout_alignStart="@+id/vcodeEdit"
            android:layout_centerHorizontal="true"
            android:layout_alignEnd="@+id/deviceNumberEdit"
            android:layout_marginTop="40dp" />

        <AutoCompleteTextView
            android:layout_width="270dp"
            android:layout_height="50dp"
            android:inputType="textPersonName"
            android:textColor="@color/fontColor"
            android:ems="10"
            android:hint="设备编号"
            android:textColorHint="@color/hintColor"
            android:focusable="true"
            android:paddingLeft="10dp"
            android:background="@drawable/selector_edit_bk"
            android:id="@+id/deviceNumberEdit"
            android:imeOptions="actionNext"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="35dp" />


        <android.support.v7.widget.AppCompatEditText
            android:id="@+id/vcodeEdit"
            android:layout_width="270dp"
            android:layout_height="50dp"
            android:hint="授权码"
            android:textColorHint="@color/hintColor"
            android:textColor="@color/fontColor"
            android:ems="10"
            android:layout_marginTop="20dp"
            android:background="@drawable/selector_edit_bk"
            android:paddingLeft="10dp"
            android:focusable="true"
            android:textAlignment="inherit"
            android:inputType="number"
            android:layout_below="@+id/deviceNumberEdit"
            android:layout_alignStart="@+id/deviceNumberEdit" />



    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="35dp"
        android:paddingLeft="30dp"
        android:paddingRight="30dp">

        <Button
            android:text="注册"
            android:layout_weight="1"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:id="@+id/button10"
            android:background="@null"
            android:textAllCaps="false"
            android:textColor="@color/buttonNormal"
            android:layout_alignParentEnd="true" />

    </LinearLayout>

    </RelativeLayout>


</RelativeLayout>