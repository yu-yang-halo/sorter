<resources>


    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Color palette -->
        <item name="android:colorBackground">@color/whiteColor</item>
        <item name="android:listDivider">@drawable/divider_horizontal_bright</item>
        <item name="android:dividerHeight">0.5dp</item>
    </style>

    <style name="AppTheme2" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Color palette -->
        <item name="android:colorBackground">@color/whiteColor</item>
        <item name="android:listDivider">@drawable/divider_horizontal_bright</item>
        <item name="android:dividerHeight">0.5dp</item>
    </style>

    <style name="Animation.Popup" parent="@android:style/Animation">
        <item name="android:windowEnterAnimation">@android:anim/fade_in</item>
        <item name="android:windowExitAnimation">@android:anim/fade_out</item>
    </style>

    <style parent="Theme.AppCompat.Dialog" name="Dialog.NoTitle">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowBackground">@color/alphaBlack80</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>


</resources>
